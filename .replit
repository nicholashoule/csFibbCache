run = "dotnet run"
entrypoint = "Program.cs"

hidden = ["bin", "obj"]

[env]
DOTNET_NOLOGO = "1"
DOTNET_CLI_TELEMETRY_OPTOUT = "1"
DOTNET_ROOT = ""
DOTNET_MULTILEVEL_LOOKUP = "0"

[packager]
language = "dotnet"

[packager.features]
packageSearch = true

[nix]
channel = "stable-21_11"

[languages.csharp]
pattern = "**/*.cs"

[languages.csharp.languageServer]
start = ["omnisharp", "--languageserver"]
